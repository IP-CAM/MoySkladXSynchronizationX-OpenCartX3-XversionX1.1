{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <div id="tabs" class="htabs">
              <a href="#tab-setting">{{ text_tab_setting }}</a>  
              <a href="#tab-import">{{ text_tab_import }}</a>
              <a href="#tab-author">{{ text_tab_author }}</a>
        </div>
        <div id="tab-setting">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-category" class="form-horizontal">
               <table class="form">
                    <tr>
                      <td>{{ entry_username }}</td>
                      <td><input name="module_moyskladOC3Synch11_username" type="text" value="{{ module_moyskladOC3Synch11_username }}" /></td>
                    </tr>
                    <tr>
                      <td>{{ entry_password }}</td>
                      <td><input name="module_moyskladOC3Synch11_password" type="password" value="{{ module_moyskladOC3Synch11_password }}" /></td>
                    </tr>
                    <tr>
		      <td>
			<div class="form-group">
			  <label class="col-md-3 control-label" for="input-status">{{ entry_status }}</label>
			  <div class="col-md-9">
			    <select name="module_moyskladOC3Synch11_status" id="input-status" class="form-control">
			      {% if module_moyskladOC3Synch11_status %}
			      <option value="1" selected="selected">{{ text_enabled }}</option>
			      <option value="0">{{ text_disabled }}</option>
			      {% else %}
			      <option value="1">{{ text_enabled }}</option>
			      <option value="0" selected="selected">{{ text_disabled }}</option>
			      {% endif %}
			    </select>
			  </div>
			</div>
		      </td>
                    </tr>
               </table>   
            </form>
        </div>
        <div id="tab-import">
            <table>
              <tr>
                <td>
                  <form action="{{ action_import_test }}" method="post" enctype="multipart/form-data"  class="form-inline">
                  <div class="form-group">
                    <span>{{ import_test_text }}</span>
                  </div>
                <button type="submit" name="start" value="true" class="btn btn-primary importProduct" style="margin-left: 30px;">{{ import_button }}</button>
                </form>
                <form action="{{ action_import_createCronTask }}" method="post" enctype="multipart/form-data"  class="form-inline">
                  <div class="form-group">
                  {% if module_moyskladOC3Synch11_cron_task %}
                    <span>{{ import_task_text }} ({{ task }} : {{ module_moyskladOC3Synch11_cron_task }})</span>
                    {% else %}
                    <span>{{ import_task_text }} ({{ task }} : 0)</span>
                    {% endif %}
                  </div>
                <button type="submit" name="start" value="true" class="btn btn-primary importProduct" style="margin-left: 30px;">{{ create_task_button }}</button>
                </form>
                </td>
              </tr>
        </table> 
        </div>
        <div id="tab-author">
            <table>
                 <tr>
                   <td><span style="color: black;margin-left: 30px;font-size: 25px;">
                           <a href="http://isyms.ru/">created by Artur Legusha</a>
                       </span></td>
                  </tr>
            </table>    
        </div>
      </div>
    </div>
  </div>
</div>
